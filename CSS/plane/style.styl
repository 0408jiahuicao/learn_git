$bg_color = #ffd200
*
    margin 0
    padding 0
html, body
    width 100%
    height 100%
@keyframes undulate 
    0%,50%,100%
        transform translate3d(0,0,0)
    25%
        transform translate3d(-6px,-18px,10px)
    75%
        transform translate3d(6px,10px,0)
.plane-page
    width 100%
    height 100%
    background-color $bg_color
    position relative
    .lb
        width 50px
        height 50px
    .plane-wrapper
        position absolute
        left 20%
        top 40%
        animation undulate 6s linear infinite
        .plane
            width 100%
    .rotate-container
        position absolute
        left 27%
        top 45%
        transform-origin 0 100%
        animation rotating .1s linear infinite reverse
